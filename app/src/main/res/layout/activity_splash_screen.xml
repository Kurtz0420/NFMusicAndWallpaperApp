<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.homie.nf.SplashScreen"
    >

    <ImageView
        android:id="@+id/backgroundsplash_imageView"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="fitXY"
 />

    <ImageView
        android:id="@+id/outcast_fontImageView"
        android:layout_width="179dp"
        android:layout_height="200dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="192dp"
        android:padding="0dp"
        android:src="@drawable/logooutcast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/right_box_imageView"
        android:layout_width="61dp"
        android:layout_height="82dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/t"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/left_boxes_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/left_boxes_imageView"
        android:layout_width="128dp"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/left_boxes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>