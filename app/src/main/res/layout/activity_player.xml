<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundnew"
    tools:context="com.homie.nf.PlayerActivity">


       <!-- <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/hqdefault"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"/>-->
    <TextView
        android:id="@+id/songtextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="NF-Remember This"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@id/cover"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="NF"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="0dp"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:textColor="#FFF"
        android:id="@+id/songtextView2"
        android:layout_below="@+id/songtextView"
        android:gravity="center"


        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/songtextView2"
         />
    <Button
        android:id="@+id/pause"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/play_button"


        />

    <Button
        android:id="@+id/next"
        android:layout_width="34dp"
        android:layout_height="34dp"


android:layout_alignParentRight="true"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="80dp"

        android:layout_alignParentBottom="true"
        android:background="@drawable/next_button"

        />

    <Button
        android:id="@+id/previous"
        android:layout_width="34dp"
        android:layout_height="34dp"
android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="80dp"



        android:layout_marginLeft="89dp"
        android:background="@drawable/prev_button" />

    <Button
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:id="@+id/shuffle"
        android:background="@drawable/shuffle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/repeat"
        android:background="@drawable/repeat"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/running_time"
        android:textColor="#FFF"

        android:text=" "
        android:layout_marginBottom="105dp"
        android:layout_marginLeft="3dp"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/back_button"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"

        android:layout_marginLeft="18dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/back_arrow" />
<ImageView
    android:layout_width="1095px"
    android:layout_height="1095px"
    android:background="@drawable/cover"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="70dp"
    android:id="@+id/cover"



    />
    <Button
        android:id="@+id/queue_button"
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"

        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/queue_icon" />

    <ImageView
        android:id="@+id/back_view"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_backview" />


</RelativeLayout>




