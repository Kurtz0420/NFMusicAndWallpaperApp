<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/outcast_fontImageView"
        android:layout_width="179dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logooutcast"
       />

    <ImageView
        android:id="@+id/right_box_imageView"
        android:layout_width="61dp"
        android:layout_height="82dp"
        android:layout_above="@id/outcast_fontImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="-94dp"
        android:src="@drawable/t"
        android:layout_alignTop="@id/outcast_fontImageView"
        android:layout_marginTop="14dp"/>

    <ImageView
        android:id="@+id/left_boxes_imageView"
        android:layout_width="128dp"
        android:layout_height="77dp"

        android:layout_alignTop="@+id/outcast_fontImageView"
        android:layout_toLeftOf="@id/right_box_imageView"
        android:layout_marginTop="20dp"

        android:src="@drawable/left_boxes" />
</RelativeLayout>