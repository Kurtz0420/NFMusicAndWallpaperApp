<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">


        <!--<ImageView
            android:id="@+id/cover"
            android:layout_width="186dp"
            android:layout_height="180dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/cover"
            android:layout_centerHorizontal="true" />-->
        <TextView
            android:id="@+id/fullDurationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/circularSeekBar"
            android:fontFamily="@font/francois_one"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/currentDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@id/circularSeekBar"
            android:fontFamily="@font/francois_one"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/cover"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"

            />
        <me.tankery.lib.circularseekbar.CircularSeekBar
            android:id="@+id/circularSeekBar"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:layout_centerHorizontal="true"
            app:cs_circle_color="@color/seekbar_circle"
            app:cs_circle_progress_color="@color/progress_seek"
            app:cs_circle_stroke_width="5dp"
            app:cs_pointer_color="@color/white"
            app:cs_pointer_stroke_width="20dp"
            app:cs_circle_style = "round"
            />

    </RelativeLayout>

</RelativeLayout>